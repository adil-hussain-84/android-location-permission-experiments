<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="16dp"
    android:paddingVertical="16dp"
    tools:context="com.tazkiyatech.app.MainActivity">

    <TextView
        android:id="@+id/postNotificationsPermissionSummaryTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        tools:text="This app has full permission to post notifications." />

    <Space
        android:id="@+id/space"
        android:layout_width="0dp"
        android:layout_height="6dp" />

    <Button
        android:id="@+id/enableBreakingNewsNotificationsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/enable_breaking_news_notifications" />

    <Button
        android:id="@+id/postBreakingNewsNotificationButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/post_breaking_news_notification" />

    <androidx.constraintlayout.helper.widget.Flow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:constraint_referenced_ids="postNotificationsPermissionSummaryTextView,space,enableBreakingNewsNotificationsButton,postBreakingNewsNotificationButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
